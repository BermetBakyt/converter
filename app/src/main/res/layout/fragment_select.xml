<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".app.presentation.select.SelectCurrencyFragment">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/inputAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="123"
        android:layout_marginTop="200dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="40dp"
        android:textSize="20sp"
        android:inputType="numberDecimal" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/inputConvertedAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="250dp"
        app:layout_constraintBaseline_toBaselineOf="@id/inputAmount"
        app:layout_constraintStart_toStartOf="parent"
        android:text="123"
        android:textSize="20sp"
        android:layout_marginTop="40dp"
        android:inputType="numberDecimal" />

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:src="@drawable/arrow_two_side"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.38"
        app:layout_constraintRight_toLeftOf="@id/textCurrencySelected1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.369" />

    <TextView
        android:id="@+id/textCurrencySelected1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RU"
        android:layout_marginTop="60dp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonChangeCurrency1"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/inputAmount"/>

    <TextView
        android:id="@+id/textCurrencySelected2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USD"
        android:layout_marginTop="60dp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="250dp"
        app:layout_constraintTop_toBottomOf="@id/inputConvertedAmount"/>

    <Button
        android:id="@+id/buttonChangeCurrency1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:text="@string/btn1"
        android:textColor="@color/blue"
        style="?android:attr/borderlessButtonStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textCurrencySelected1" />

    <Button
        android:id="@+id/buttonChangeCurrency2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:text="@string/btn1"
        android:textColor="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        style="?android:attr/borderlessButtonStyle"
        app:layout_constraintHorizontal_bias="0.754"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textCurrencySelected2" />

</androidx.constraintlayout.widget.ConstraintLayout>